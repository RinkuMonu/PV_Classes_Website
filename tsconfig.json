{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "out/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // ✅ add all JS
    "**/*.jsx", // ✅ add all JSX
    "src/**/*.js", // ✅ ensure src/app/*.js picked up
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
